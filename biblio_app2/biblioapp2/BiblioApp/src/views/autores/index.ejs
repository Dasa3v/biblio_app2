<!-- carpeta: views/autores, archivo: index.ejs -->
<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>Autores</h2>
  <a href="/autores/new" class="btn btn-primary mb-3">Nuevo Autor</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>País</th>
        <th>Fecha de nacimiento</th>
        <th style="width: 160px;">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (autores.length === 0) { %>
        <tr>
          <td colspan="4" class="text-center">No hay autores registrados.</td>
        </tr>
      <% } %>
      <% autores.forEach(autor => { %>
        <tr>
          <td><%= autor.nombre %></td>
          <td><%= autor.pais %></td>
          <td><%= autor.fecha_nacimiento ? autor.fecha_nacimiento.toISOString().slice(0,10) : '' %></td>
          <td>
            <a href="/autores/<%= autor.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
            <form action="/autores/<%= autor.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('¿Eliminar este autor?');">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>