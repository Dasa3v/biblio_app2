<h1><%= libro.id_book ? 'Editar Libro' : 'Nuevo Libro' %></h1>
<form method="POST" action="<%= libro.id_book ? '/libros/editar/' + libro.id_book : '/libros/nuevo' %>">
  <div class="mb-3">
    <label class="form-label">Nombre</label>
    <input type="text" name="name" class="form-control" value="<%= libro.name || '' %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Autor</label>
    <select name="id_author" class="form-control">
      <% autores.forEach(a => { %>
        <option value="<%= a.id_author %>" <%= libro.id_author == a.id_author ? 'selected' : '' %>><%= a.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">ISBN</label>
    <input type="text" name="isbn" class="form-control" value="<%= libro.isbn || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Año</label>
    <input type="number" name="year_published" class="form-control" value="<%= libro.year_published || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Páginas</label>
    <input type="number" name="num_pages" class="form-control" value="<%= libro.num_pages || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Categoría</label>
    <select name="id_category" class="form-control">
      <% categorias.forEach(c => { %>
        <option value="<%= c.id_category %>" <%= libro.id_category == c.id_category ? 'selected' : '' %>><%= c.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">Editorial</label>
    <select name="id_publisher" class="form-control">
      <% editoriales.forEach(e => { %>
        <option value="<%= e.id_publisher %>" <%= libro.id_publisher == e.id_publisher ? 'selected' : '' %>><%= e.name %></option>
      <% }) %>
    </select>
  </div>
  <button class="btn btn-success" type="submit">Guardar</button>
</form>