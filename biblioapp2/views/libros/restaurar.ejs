
<div class="container mt-4">
  <h1 class="mb-4">ðŸ“š Libros Eliminados</h1>
  
  <!-- BotÃ³n de volver -->
  <a href="/libros" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Volver a Libros
  </a>

  <!-- Tabla de libros eliminados -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>TÃ­tulo</th>
          <th>ISBN</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% libros.forEach(libro => { %>
          <tr>
            <td><%= libro.id_book %></td>
            <td><%= libro.title %></td>
            <td><%= libro.isbn %></td>
            <td>
              <a 
                href="/libros/restaurar/<%= libro.id_book %>" 
                class="btn btn-success btn-sm"
                data-bs-toggle="tooltip" 
                title="Restaurar este libro"
              >
                <i class="bi bi-arrow-counterclockwise"></i> Restaurar
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Mensaje si no hay libros eliminados -->
  <% if (libros.length === 0) { %>
    <div class="alert alert-info">
      No hay libros eliminados para restaurar.
    </div>
  <% } %>
</div>

<!-- Script para tooltips de Bootstrap -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (element) {
      return new bootstrap.Tooltip(element);
    });
  });
</script>