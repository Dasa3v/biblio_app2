<h1>Libros</h1>
<a href="/libros/nuevo" class="btn btn-primary mb-3">➕ Nuevo Libro</a>
<a href="/libros/restaurar" class="btn btn-secondary mb-3 ms-2">🗑 Papelera</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Autor</th>
      <th>Categoría</th>
      <th>Editorial</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% libros.forEach(l => { %>
      <tr>
        <td><%= l.id_book %></td>
        <td><%= l.name %></td>
        <td><%= l.autor %></td>
        <td><%= l.categoria %></td>
        <td><%= l.editorial %></td>
        <td>
          <a href="/libros/editar/<%= l.id_book %>" class="btn btn-sm btn-warning">✏️</a>
          <a href="/libros/delete/<%= l.id_book %>" class="btn btn-sm btn-danger ms-1">🗑</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>