<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìö Gesti√≥n de Categor√≠as</h1>
        <a href="/categorias/nuevo" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categor√≠a
        </a>
    </div>

    <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (categorias.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categorias.forEach(categoria => { %>
                                <tr>
                                    <td><%= categoria.id_category %></td>
                                    <td><%= categoria.name %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/categorias/editar/<%= categoria.id_category %>" 
                                               class="btn btn-outline-primary"
                                               data-bs-toggle="tooltip" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form action="/categorias/eliminar/<%= categoria.id_category %>" 
                                                  method="POST" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('¬øEst√°s seguro de eliminar esta categor√≠a?');">
                                                <button type="submit" 
                                                        class="btn btn-outline-danger"
                                                        data-bs-toggle="tooltip" 
                                                        title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-folder-x" style="font-size: 3rem; color: #6c757d;"></i>
                    <h5 class="mt-3">No hay categor√≠as registradas</h5>
                    <p class="text-muted">Comienza agregando una nueva categor√≠a</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    // Activar tooltips de Bootstrap
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (element) {
            return new bootstrap.Tooltip(element);
        });
    });
</script>