<%- include('../../partials/header') %>
<div class="container mt-4">
  <h2>Panel de Control - Libros</h2>
  <div class="mb-3">
    <a href="/panel/libros/new" class="btn btn-primary">Agregar Nuevo Libro</a>
    <a href="/panel/libros/papelera" class="btn btn-secondary ms-2">Ver Papelera</a>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Categoría</th>
        <th>Año</th>
        <th style="width: 160px;">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (libros.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center">No hay libros registrados.</td>
        </tr>
      <% } %>
      <% libros.forEach(libro => { %>
        <tr>
          <td><%= libro.titulo %></td>
          <td><%= libro.autor %></td>
          <td><%= libro.categoria %></td>
          <td><%= libro.anio %></td>
          <td>
            <a href="/panel/libros/<%= libro.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
            <form action="/panel/libros/<%= libro.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('¿Eliminar este libro?');">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer') %>