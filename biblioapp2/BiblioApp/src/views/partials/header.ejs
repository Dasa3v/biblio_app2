<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>BiblioApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="<%= user ? '/panel' : '/' %>">
      <img src="/BiblioApp/src/public/img/logo.png">
      BiblioApp
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <% if (user) { %>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/panel/libros">Libros</a></li>
          <li class="nav-item"><a class="nav-link" href="/panel/categorias">Categorías</a></li>
          <li class="nav-item"><a class="nav-link" href="/panel/autores">Autores</a></li>
          <li class="nav-item"><a class="nav-link" href="/panel/editorial">Editoriales</a></li>
        </ul>
        <ul class="navbar-nav mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
      <% } else { %>
        <ul class="navbar-nav mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/register">Registrarse</a></li>
        </ul>
      <% } %>
    </div>
  </div>
</nav>
<script>
  // Modo oscuro
  document.addEventListener('DOMContentLoaded', function() {
    const btn = document.getElementById('modoOscuroBtn');
    const icono = document.getElementById('icono-modo');
    if (btn) {
      btn.onclick = function() {
        document.body.classList.toggle('dark-mode');
        if(document.body.classList.contains('dark-mode')) {
          icono.className = 'bi bi-sun';
        } else {
          icono.className = 'bi bi-moon';
        }
      }
    }
  });
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">