<%- include('./partials/header') %>

<!-- Estilos embebidos directamente en la página -->
<style>
  body {
    background: linear-gradient(rgba(10,10,30,0.8), rgba(10,10,30,0.8)), url('/img/fondo-biblioapp.jpg') no-repeat center center fixed;
    background-size: cover;
    color: #e0e0ff;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding-bottom: 80px;
  }

  h1 {
    font-size: 2.8rem;
    text-shadow: 0 0 12px rgba(102,204,255,0.8);
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.2rem;
    color: #cfd9ff;
    text-shadow: 0 0 6px rgba(150,200,255,0.5);
  }

  .btn-lg {
    padding: 0.75rem 2rem;
    font-size: 1.2rem;
    text-transform: uppercase;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(102,204,255,0.3);
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: #1a73e8;
    border: none;
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #42a5f5;
    box-shadow: 0 0 15px rgba(102,204,255,0.6);
  }

  .btn-secondary {
    background-color: #5e35b1;
    border: none;
    color: #fff;
  }

  .btn-secondary:hover {
    background-color: #7e57c2;
    box-shadow: 0 0 15px rgba(150,130,255,0.6);
  }

  footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: rgba(20, 20, 40, 0.7);
    color: #ccc;
    text-align: center;
    padding: 0.8rem 0;
    font-size: 0.9rem;
    backdrop-filter: blur(5px);
    border-top: 1px solid rgba(255,255,255,0.1);
  }
</style>

<!-- Contenido principal -->
<div class="container mt-5 text-center">
  <h1>Bienvenido a BiblioApp</h1>
  <p class="lead">Gestiona tus libros, autores, categorías y editoriales de manera sencilla.</p>
  <div class="mt-4">
    <a href="/auth/login" class="btn btn-primary btn-lg">Iniciar Sesión</a>
    <a href="/auth/register" class="btn btn-secondary btn-lg ms-3">Registrarse</a>
  </div>
</div>

<%- include('./partials/footer') %>
