<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>Editar Autor</h2>
  <form action="/autores/<%= autor.id %>/update" method="POST" class="mb-3">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= autor.nombre %>" required>
    </div>
    <div class="mb-3">
      <label for="pais" class="form-label">Pa√≠s</label>
      <input type="text" class="form-control" id="pais" name="pais" value="<%= autor.pais %>" required>
    </div>
    <div class="mb-3">
      <label for="fecha_nacimiento" class="form-label">Fecha de nacimiento</label>
      <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" value="<%= autor.fecha_nacimiento ? autor.fecha_nacimiento.toISOString().slice(0,10) : '' %>" required>
    </div>
    <button type="submit" class="btn btn-success">Actualizar</button>
    <a href="/autores" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
<%- include('../partials/footer') %>